<%- include('../partials/header')%>
<%- include('../partials/navbar')%>
<title>Editar Projeto</title>
<style>
    body{
        background-color: rgb(250, 248, 248);
    }
</style>
<body>
    <hr>
    <div class="container">
        <div class="card bg-dark text-white">
            <div class="card-header">
                <h3>Editar Projeto</h3>
                <div style="width: 100%; border: 1px solid #fff;"></div>
            </div>
            <div class="card-body">
                <form action="/update-project" method="post">
                    <input class="form-control" type="hidden" name="id" value="<%= project.id %>"><br>
                    <input class="form-control" type="text" name="name" id="name" value="<%= project.name %>"><br>
                    <input class="form-control" type="date" name="start" id="start" value="<%= project.start %>"><br>
                    <input class="form-control" type="date" name="end" id="end" value="<%= project.end %>"><br>
                    <input class="form-control" type="text" name="theme" id="theme" value="<%= project.theme %>"><br>
                    <button class="btn btn-light">Atualizar</button>
                    <div style="float: inline-end;">
                        <a href="/projects" class="btn btn-light">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
   <hr>
</body>
</html>